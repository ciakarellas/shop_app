<div class="column is-9">

  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><a href=<%=admin_home_path %>>Admin</a></li>
      <li><a href=<%=admin_home_path %>>Home</a></li>
      <li class="is-active" aria-current="page"><a href=<%=admin_products_path %>>Products</a></li>
    </ul>
  </nav>
  <div class="container">
    <table class="table is-bordered is-hoverable is-fullwidth is-striped" >
      <thead>
      <tr>
        <th>ID</th>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tfoot>
      <tr>
        <th>ID</th>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
      </tfoot>
      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td> <%= product.id %></td>
          <td> <%= product.name %></td>
          <td> <%= product.price %> $</td>
          <td> <%= product.quantity %></td>
          <td>
            <div class="field is-grouped">
              <div class="columns is-vcentered">
                <div class="column">
                  <span class="button is-link">
                    <%= link_to(product) do %>
                      <span class="has-text-white is-size-6 has-text-weight-semibold">Details</span>
                    <% end %>
                  </span>
                </div>
                <div class="column">
                  <span class="icon is-small">
                    <i class="fas fa-shopping-cart" aria-hidden="true"></i>
                  </span>
                </div>
              </div>
              <p class="control">
                <button class="button is-small is-link"><%= link_to 'Edit', edit_admin_product_path(product), class: "has-text-white" %></button>
              </p>
              <p class="control">
                <button class="button is-small is-danger"><%= link_to 'Destroy', admin_product_path(product), class: "has-text-white", method: :delete, data: { confirm: 'Are you sure?' } %></button>
              </p>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="container mt-5">
    <button class="button is-info"><%= link_to 'New Product', new_admin_product_path, class: "has-text-white" %></button>
  </div>
</div>
